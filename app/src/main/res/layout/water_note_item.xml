<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_height="wrap_content"
    android:layout_width="370dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="27/05/1998"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintRight_toLeftOf="@id/tv_water_color_title"/>

        <View
            android:id="@+id/first_pager"
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="06:03"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/first_pager"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_water_color_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_date"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Warna air"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_brightness_title"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_brightness_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_date"
            app:layout_constraintTop_toBottomOf="@id/tv_water_color_title"
            android:text="Kecerahan"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_ph_title"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_ph_title"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_date"
            app:layout_constraintTop_toBottomOf="@id/tv_brightness_title"
            android:text="pH"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_water_color"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_water_color_title"
            tools:text=" : Kuning"
            app:layout_constraintBottom_toTopOf="@id/tv_brightness"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_brightness_title"
            tools:text=" : 30 cm"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@id/tv_ph"
            app:layout_constraintTop_toBottomOf="@id/tv_water_color"/>
        <TextView
            android:id="@+id/tv_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_ph_title"
            tools:text=" : 7"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_brightness"/>
        <TextView
            android:id="@+id/tv_do_title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_water_color_title"
            android:text="DO"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_salinity_title"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_salinity_title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_brightness_title"
            android:text="Salinitas"
            android:textSize="12sp"
            android:layout_marginStart="80dp"
            app:layout_constraintBottom_toTopOf="@id/tv_temp"
            app:layout_constraintTop_toBottomOf="@id/tv_water_color"/>
        <TextView
            android:id="@+id/tv_temp_title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_ph_title"
            android:text="Suhu"
            android:textSize="12sp"
            android:layout_marginStart="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_brightness"/>
        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_do_title"
            tools:text=" : 30"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_salinity"/>
        <TextView
            android:id="@+id/tv_salinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_salinity_title"
            tools:text=" : 7"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@id/tv_temp"
            app:layout_constraintTop_toBottomOf="@id/tv_do"/>
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_temp_title"
            tools:text=" : 30 c"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_salinity"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
